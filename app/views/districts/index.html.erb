<h4>Daftar Kecamatan</h4>

<table>
  <tr>
    <th>Nama</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @districts.each do |district| %>
  <tr>
    <td><%= district.name %></td>
    <td><%= link_to 'Show', district, :class => "button" %></td>
    <td><%= link_to 'Edit', edit_district_path(district), :class => "button" %></td>
    <td><%= link_to 'Destroy', district, confirm: 'Are you sure?', :class => "button danger", method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Tambah Kecamatan', new_district_path, :class => "button big" %>
