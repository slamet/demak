<h3><%= @project.name %></h3>
<ul id='tickets'>
<% @project.tickets.each do |ticket| %>
<li>
#<%= ticket.id %> - <%= link_to ticket.title, [@project, ticket] %>
</li>
<% end %>
</ul>


<%= link_to "Tambah Ticket", new_project_ticket_path(@project), :class => "button big" %>
<%= admins_only do %>
<%= link_to "Edit Project", edit_project_path(@project), :class => "button" %>
<%= link_to "Delete Project", @project, :class => "button danger", :method => :delete,
:confirm => "Are you sure you want to delete this project?" %>
<% end %>