<div id='ticket'>
<h4><%= @ticket.title %></h4>
<%= simple_format(@ticket.description) %>
</div>

<%= link_to "Edit Ticket",  [:edit, @project, @ticket], :class => "button" %>
<%= link_to "Delete Ticket", [@project, @ticket], :class => "button danger", :method => :delete,
:confirm => "Are you sure you want to delete this ticket?" %>